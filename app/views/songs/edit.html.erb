<h1>Editing <%= @song.title %></h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, Artist %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_id, Genre %>
  <%= f.collection_select :genre_id, Genre.all, :name, :name %><br>
  <%= f.fields_for :notes do |note| %>
    <%= note.label :song_note_1 %>
    <input name="song[notes][]" id="song_notes_1" type="text" /><br>

    <%= note.label :song_note_2 %>
    <input name="song[notes][]" id="song_notes_2" type="text" /><br>
  <% end %>

  <%= f.submit %>
<% end %>


