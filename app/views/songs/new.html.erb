<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field :artist_name %>

  <%= f.fields_for :notes do |n| %>
    <%= n.label :content, "Notes" %>
    <%= n.text_field :content %>
  <% end %>


  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <%= f.submit %>
<% end %>
